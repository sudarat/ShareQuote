<% if notice != nil %>
<p id="notice"><%= notice %></p>
<% end %>
<h3>Post</h3>
<%= link_to 'New Post', new_post_path %>
<%= link_to 'Random', posts_random_path ,:class => "right"%>
<hr>

<p>
  <b>User:</b>
  <%= @post.user %>
</p>

<p>
  <b>Message:</b>
  <%= @post.message %>
</p>

<p>
  <b>Tag:</b>
  <% @tax_no = 0 %>
 <% @post.tag_list.each do |post| %>
  <% if @post.tag_list[@tax_no] == @post.tag_list.last%>
    <%= link_to @post.tag_list[@tax_no], tags_path(:name => @post.tag_list[@tax_no]) %>
  <% else %>
    <%= link_to @post.tag_list[@tax_no], tags_path(:name => @post.tag_list[@tax_no]) %>,
  <% end %>
  <% @tax_no = @tax_no+1 %>
 <% end %>
<!--   <%= @post.tag_list %> -->
</p>

<p>
  <b>Time share:</b>
  <%= @post.time_share.strftime("%Y-%m-%d %H:%M:%S") %>
</p>

<p>
  <b>Vote all:</b>
  <%= @post.vote_all %>
</p>

<p>
  <b>Vote week:</b>
  <%= @post.vote_week %>
</p>

<%= link_to 'Vote', voteup_post_path(@post) %> 
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
